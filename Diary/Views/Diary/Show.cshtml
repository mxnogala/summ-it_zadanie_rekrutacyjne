@model Diary.Models.DiaryModel

@{
    ViewData["Title"] = "Diary entry";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>

    <hr />
    <div class="row">
        <div class="col-12">
            <p class="text-muted"><span class="font-weight-bold">@Html.DisplayNameFor(model => model.Day)</span> @Html.DisplayFor(model => model.Day)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p>@Html.DisplayFor(model=>model.Entry)</p>
        </div>
    </div>
<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Back to diary</a>
</div>
